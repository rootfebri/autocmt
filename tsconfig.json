{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules/*"],
            "~/*": ["src/*"]
        },
    },
    "include": ["src/**/*", "migrations/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
