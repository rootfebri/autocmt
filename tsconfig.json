{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "~/*": [
                "src/*"
            ]
        },
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "ES6",
            "ES5",
            "ESNext",
        ],

        "moduleResolution": "node",
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
